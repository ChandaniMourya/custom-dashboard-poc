{
  "definitions": [
    {
      "definitionId": "financial_overview",
      "queryDefinition": {
        "description": "Fetch financial overview metrics",
        "query": "SELECT totalDeposits AS a, totalWithdrawals AS b, totalLeads AS c, swapPaid AS d, positions AS e, newClients AS f FROM financials WHERE date = {dateParam}"
      },
      "config": {
        "widgets": [
          {
            "widgetId": "totalDeposits",
            "label": "Total Deposits",
            "valueDefinition": "query_result.a",
            "config": {
              "trend": {
                "valueDefinition": "query_result.a_trend",
                "positiveColor": "#00ff00",
                "negativeColor": "#ff0000",
                "neutralColor": "#FFFF00"
              }
            }
          },
          {
            "widgetId": "totalWithdrawals",
            "label": "Total Withdrawals",
            "valueDefinition": "query_result.b",
            "config": {
              "unit": "USD",
              "decimalPlaces": 2,
              "color": "#C70039",
              "trend": {
                "valueDefinition": "query_result.b_trend",
                "positiveColor": "#00ff00",
                "negativeColor": "#ff0000",
                "neutralColor": "#FFFF00"
              }
            }
          },
          {
            "widgetId": "totalLeads",
            "label": "Total Leads",
            "valueDefinition": "query_result.c",
            "config": {
              "unit": "leads",
              "decimalPlaces": 0,
              "color": "#1e90ff",
              "trend": {
                "valueDefinition": "query_result.c_trend",
                "positiveColor": "#00ff00",
                "negativeColor": "#ff0000",
                "neutralColor": "#FFFF00"
              }
            }
          },
          {
            "widgetId": "swapPaid",
            "label": "Swap Paid",
            "valueDefinition": "query_result.d",
            "config": {
              "unit": "USD",
              "decimalPlaces": 2,
              "color": "#ff7f50"
            }
          },
          {
            "widgetId": "positions",
            "label": "Positions",
            "valueDefinition": "query_result.e",
            "config": {
              "type": "indicator",
              "lowerBound": 10,
              "upperBound": 100,
              "colorBelow": "#a9f75f",
              "colorAbove": "#C70039"
            }
          },
          {
            "widgetId": "newClients",
            "label": "New Clients",
            "valueDefinition": "query_result.f",
            "config": {
              "unit": "clients",
              "decimalPlaces": 0,
              "color": "#ffa500"
            }
          }
        ]
      }
    },
    {
      "definitionId": "key_business_metrics",
      "queryDefinition": {
        "description": "Fetch key business metrics",
        "query": "SELECT activeAccounts AS a, totalTrades AS b, commissionSettled AS c, realisedPL AS d FROM business_metrics WHERE date = {dateParam}"
      },
      "config": {
        "widgets": [
          {
            "widgetId": "activeAccounts",
            "label": "Total Active Accounts",
            "valueDefinition": "query_result.a",
            "config": {
              "unit": "accounts",
              "decimalPlaces": 0,
              "color": "#1e90ff"
            }
          },
          {
            "widgetId": "totalTrades",
            "label": "Total Trades",
            "valueDefinition": "query_result.b",
            "config": {
              "unit": "trades",
              "decimalPlaces": 0,
              "color": "#ff6347"
            }
          },
          {
            "widgetId": "commissionSettled",
            "label": "Commission Settled",
            "valueDefinition": "query_result.c",
            "config": {
              "unit": "USD",
              "decimalPlaces": 2,
              "color": "#008080"
            }
          },
          {
            "widgetId": "realisedProfitLoss",
            "label": "Realised Profit/Loss",
            "valueDefinition": "query_result.d",
            "config": {
              "unit": "USD",
              "decimalPlaces": 2,
              "colorPositive": "#009966",
              "colorNegative": "#C70039"
            }
          }
        ]
      }
    },
    {
      "definitionId": "top_instruments",
      "queryDefinition": {
        "description": "Fetch top instruments data",
        "query": "SELECT symbol, price, change, volume FROM instruments ORDER BY volume DESC"
      },
      "config": {
        "columns": [
          {
            "key": "symbol",
            "label": "Symbol"
          },
          {
            "key": "price",
            "label": "Price"
          },
          {
            "key": "change",
            "label": "Change"
          },
          {
            "key": "volume",
            "label": "Volume"
          }
        ]
      }
    }
  ]
}